---
import Section from "@/components/Section.astro";
import { softSkills } from "@cv";
---

<Section title="Soft Skills">
  <ul>
    {
      softSkills.map(({ name }) => {
        return <li>{name}</li>;
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  li {
    background-color: #ddd;
    color: black;
    border-radius: 6px;
    padding: 0.2rem 1rem;
    font-size: small;
  }
  li:hover {
    background-color: #eee;
  }
</style>
