---
import Section from "@/components/Section.astro";
import Phone from "@/icons/Phone.astro";
import { references } from "@cv";
---

<Section title="References" className="print">
  <ul>
    {
      references.map(({ name, reference, telefono }) => (
        <li>
          <article>
            <header>
              <h3>{name}</h3>
              <p>{reference}</p>
            </header>
            <footer>
              <span>
                <Phone />
                {telefono}
              </span>
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  article {
    border: 1px solid #f2f2f2;
    border-radius: 8px;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }
  footer span {
    display: flex;
    align-items: center;
    gap: 4px;
    background: #eee;
    border-radius: 6px;
    color: #444;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
